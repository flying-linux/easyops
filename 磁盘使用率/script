echo "磁盘使用率及挂载项："
df -ahP
echo ""
df -ahP|awk -F "[ %]+" '/^\/dev/{if($5>80){print $1,$5"%";num++;}}END{if(num>0){print "有"num"个挂载磁盘的使用率超过80%，请检查磁盘！"}else{print "磁盘使用状况良好"}}'
